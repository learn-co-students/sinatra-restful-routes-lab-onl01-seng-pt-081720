<form method="POST" action="/recipes/<%=@recipe.id%>">
<input id="hidden" type="hidden" name="_method" value="patch" />

<label for="name">Name</label>
<input type="text" id="name" name="recipe_info[name]" value="<%=@recipe.name%>" />

<label for="ingredients">Ingredients</label>
<input type="text" id="ingredients" name="recipe_info[ingredients]" value="<%=@recipe.ingredients%>" />

<label for="cook_time">Cook Time</label>
<input type="text" id="cook_time" name="recipe_info[cook_time]" value="<%=@recipe.cook_time%>" />

<input type="submit" value="submit" />
</form>